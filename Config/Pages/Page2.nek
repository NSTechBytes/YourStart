
;============================================================================================================================;
;                                                     Header                                                                 ;
;============================================================================================================================;

[Appearance_String]
Meter=String
Text=Appearance
X=180
Y=40
FOntSize=40
AntiAlias=1
FontWeight=900
FontFace=Ubuntu
FontColor=255,255,255

;============================================================================================================================;
;                                                    Dark Mode                                                               ;
;============================================================================================================================;

[Dark_Mode_String]
Meter=String
Text=Dark Mode
Y=150
MeterStyle=Left_String

[Dark_Mode_Image]
Meter=Image
ImageName=#@#Images\Config\on.png
W=40
H=40
X=520
Y=145
LeftMouseUpAction=[!WriteKeyValue Variables DarkMode 0 "#@#Vars.nek"][!WriteKeyValue Variables FontColor  10,10,10 "#@#Vars.nek"][!WriteKeyValue Variables BackGround_Color 255,255,255 "#@#Vars.nek"][!WriteKeyValue Variables BackGround_Opacity 150 "#@#Vars.nek"][!WriteKeyValue Variables FontFace Ubuntu "#@#Vars.nek"][!WriteKeyValue Variables Scale 1 "#@#Vars.nek"][!RainmeterRefreshApp]

[Dark_Mode_Image1]
Meter=Image
ImageName=#@#Images\Config\off.png
W=40
H=40
X=520
Y=145
Hidden=#DarkMode#
LeftMouseUpAction=[!WriteKeyValue Variables DarkMode 1 "#@#Vars.nek"][!WriteKeyValue Variables FontColor  255,255,255 "#@#Vars.nek"][!WriteKeyValue Variables BackGround_Color 10,10,10 "#@#Vars.nek"][!WriteKeyValue Variables BackGround_Opacity 150 "#@#Vars.nek"][!WriteKeyValue Variables FontFace Ubuntu "#@#Vars.nek"][!WriteKeyValue Variables Scale 1 "#@#Vars.nek"][!RainmeterRefreshApp]

[Div_1]
Meter=Shape
MeterStyle=Divider

;============================================================================================================================;
;                                                     BackGround Color                                                       ;
;============================================================================================================================;

[BackGround_Color_String]
Meter=String
Text=BackGround Color
MeterStyle=Left_String

[Skin_Input_Shape]
Meter=Shape
X=435
Y=-8r
Shape=Rectangle 0,0,130,40,8 |StrokeWidth 0 | Extend This 
This= Fillcolor 17,24,39,100
DynamicVariables=1
LeftMouseUpAction=[!PluginBang "MeterInput ExecuteBatch 1"]
MouseOverAction=[!SetOption #CURRENTSECTION# This "FillColor 17,24,39,50"][!UpdateMeter *][!Redraw]
MouseLeaveAction=[!SetOption #CURRENTSECTION# This "FillColor 17,24,39,100"][!UpdateMeter *][!Redraw]


[BackGround_Color_Text]
Meter=String
Text=#BackGround_Color#
MeterStyle=Box_Text1

[BackGround_Color_Selector]
Meter=Shape
Shape=Rectangle 0,0,20,20,15 | StrokeWidth 0 | Fill Color #BackGround_Color#
DynamicVariables=1
X=540
Y=-10r
LeftMouseUpAction=["#@#Addons\RainRGB4.exe" "VarName=BackGround_Color" "FileName=#@#Vars.nek"][!Refresh *]

